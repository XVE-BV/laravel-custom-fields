{
    "name": "xve/laravel-custom-fields",
    "description": "This is my package laravel-custom-fields",
    "keywords": [
        "xve",
        "laravel",
        "laravel-custom-fields"
    ],
    "homepage": "https://github.com/xve/laravel-custom-fields",
    "license": "MIT",
    "authors": [
        {
            "name": "Jonas Vanderhaegen",
            "email": "jonas@xve.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0||^12.0",
        "livewire/livewire": "^3.0",
        "spatie/eloquent-sortable": "^4.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "Xve\\LaravelCustomFields\\": "src/",
            "Xve\\LaravelCustomFields\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xve\\LaravelCustomFields\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Xve\\LaravelCustomFields\\LaravelCustomFieldsServiceProvider"
            ],
            "aliases": {
                "LaravelCustomFields": "Xve\\LaravelCustomFields\\Facades\\LaravelCustomFields"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
